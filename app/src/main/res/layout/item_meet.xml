<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15.5dp"
        android:paddingEnd="15.5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/white"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="12dp"
            app:layout_constraintDimensionRatio="W, 1:2.059"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/title_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_medium"
                    android:letterSpacing="-0.01"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    tools:text="안산시 상록구" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_medium"
                    android:letterSpacing="-0.01"
                    android:text=" · "
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_medium"
                    android:letterSpacing="-0.01"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    tools:text="1시" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_medium"
                    android:letterSpacing="-0.01"
                    android:text=" · "
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/diff_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_medium"
                    android:letterSpacing="-0.01"
                    android:textColor="@color/keyColor"
                    android:textSize="16dp"
                    tools:text="50:12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/participant_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/map_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".3093"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_container">

            </LinearLayout>


            <TextView
                android:id="@+id/map_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/ffebedff"
                android:fontFamily="@font/noto_sans_medium"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="지도 확인"
                android:textColor="@color/keyColor"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="W, 1:3.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent=".4903" />

            <TextView
                android:id="@+id/start_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/keyColor"
                android:fontFamily="@font/noto_sans_medium"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="출발하기"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="W, 1:3.4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent=".4903" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>